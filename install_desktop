#!/usr/bin/env bash

# Install system deps
sudo pacman -S --needed flatpak openvpn docker xclip xfce4-terminal
# sudo apt install -y flatpak openvpn docker.io xclip xfce4-terminal


# Flatpak packages
flatpak remote-add --user --if-not-exists flathub https://flathub.org/repo/flathub.flatpakrepo
flatpak install flathub --user -y \
	telegram \
	fondo \
	spotify \
	io.dbeaver.DBeaverCommunity


# Setup gnome
dconf load  / < optional/dconf.conf
# Use alttab on current workspace only.
gsettings set org.gnome.shell.app-switcher current-workspace-only true
