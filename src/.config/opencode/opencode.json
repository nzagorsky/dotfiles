{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0",
  },
  "mcp": {
    "searxng": {
      "type": "local",
      "command": ["npx", "-y", "mcp-searxng"],
      "enabled": true,
      "environment": {
        "SEARXNG_URL": "https://search.home.zagorsky.dev"
      }
    },
    "crawl4ai": {
      "type": "remote",
      "url": "https://crawl.home.zagorsky.dev/mcp/sse",
