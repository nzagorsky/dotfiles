[
  {
    "context": "vim_mode == insert && !menu",
    "bindings": {
      "j k": ["workspace::SendKeystrokes", "escape"],
      "о л": ["workspace::SendKeystrokes", "escape"],
    },
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "ctrl-f": "editor::Format",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight",
      "space w": "workspace::Save",

      "shift-y": ["workspace::SendKeystrokes", "y $"],

      "gd": "editor::GoToDefinition",
      "g ]": "editor::GoToDiagnostic",
      "g [": "editor::GoToPreviousDiagnostic",

      "space q": "pane::CloseActiveItem",

      "space g b l": "git::Blame",
      "space g s t": "git_panel::ToggleFocus",

      "shift-k": "editor::Hover",
      "space f": "file_finder::Toggle",
      "space b": "tab_switcher::Toggle",
      "space a": "workspace::NewSearch",
    },
  },
]
