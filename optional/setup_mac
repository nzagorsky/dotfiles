#!/usr/bin/env bash

set -ex

install_neovim_plugins() {
	nvim --headless "+Lazy! sync" +qa
}

install_brew_packages() {
	brew tap homebrew/cask-fonts

	brew install --quiet --cask font-hack-nerd-font
	brew install --quiet --cask another-redis-desktop-manager --no-quarantine

	brew install --quiet \
		autoconf \
		automake \
		bat \
		colima \
		curl \
		docker-credential-helper \
		direnv \
		eza \
		fd \
		fish \
		fzy \
		git-lfs \
		go \
		hammerspoon \
		helm \
		htop \
		iina \
		jq \
		kubectl \
		libxmlsec1 \
		llvm \
		mosh \
		mysql \
		ncdu \
		neovim \
		node \
		openvpn \
		postgresql \
		rclone \
		rectangle \
		ripgrep \
		rustup-init \
		shfmt \
		sqlite3 \
		swiftformat \
		tmux \
		universal-ctags \
		watch \
		wezterm \
		wget \
		wireguard-tools \
		youtube-dl \
		yq
}

install_brew_packages
install_neovim_plugins
